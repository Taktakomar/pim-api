{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex justify-content-between mb-4">
        <div class="d-flex TitleWrap">
            <h1 class="h3 mb-0 text-gray-800">Flows Verbindungen Bearbeiten</h1>
        </div>
    </div>
    <!-- Content Row -->
    <div class="row justify-content-center">
        <div class ="col-9">
            <select class="form-control text-center" >
                <option selected>Connection zu bearbeiten auswählen</option>
                <option value="1">Otto Versandbestätigung</option>
                <option value="2">Otto Rechnungen</option>
                <option value="3">Amazon Bestände</option>
                <option value="3">Amazon Liefermeldungen</option>
            </select>
        </div>         
    </div>
    <br>
    <div class="row justify-content-center">
        <div class="col-9">
        <form>
            <div class="form-row">
                <div class="form-group col-md-4">
                <label for="inputState">Verbindungensart</label>
                <select id="inputState" class="form-control">
                    <option selected>auswählen</option>
                    <option>SFTP</option>
                    <option>API </option>
                    <option>Lokale Verbindung </option>
                </select>
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Eingangsordner</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="C:\Users\o.taktak\Downloads\Beispiele für Exporte">
            </div>
            <div class="form-group">
                <label for="inputAddress2">Ausgangordner</label>
                <input type="text" class="form-control" id="inputAddress2" placeholder="C:\Users\o.taktak\">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputState">Eingangsdatei Art</label>
                        <select id="inputState" class="form-control">
                            <option selected>auswählen</option>
                            <option>CSV</option>
                            <option>JSON </option>
                            <option>XLSX</option>
                            <option>EDI</option>
                        </select>
                </div>
            
                <div class="form-group col-md-6">
                <label for="inputZip">name der datei oder prefix</label>
                <input type="text" class="form-control" id="ausgangsdateisname">
                </div>
            </div>
            <div class="form-row">
            
                <div class="form-group col-md-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                    Prefix?
                    </label>
                </div>
                </div>
            
                <div class="form-group col-md-6">
                <label for="inputZip">Prefix</label>
                <input type="text" class="form-control" id="ausgangsdateisname">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputState">Ausgangsdatei Art</label>
                        <select id="inputState" class="form-control">
                            <option selected>auswählen</option>
                            <option>CSV</option>
                            <option>JSON </option>
                            <option>XLSX</option>
                            <option>EDI</option>
                        </select>
                </div>
            
                <div class="form-group col-md-6">
                <label for="inputZip">name der datei</label>
                <input type="text" class="form-control" id="ausgangsdateisname">
                </div>
            </div>
            <br>
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Speichern</button>
            </div>
        </form>
        </div>
    </div>
    </div>
    <!-- /.container-fluid -->
{% endblock %}
